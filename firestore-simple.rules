rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =======================================================
    // SIMPLE BUT SECURE RULES FOR DUAL-APP ARCHITECTURE
    // =======================================================
    
    // Users can only access their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Connection codes - public lookup table (secured by unique 4-digit codes)
    match /connection_codes/{codeId} {
      // Anyone authenticated can read (needed for family joining)
      allow read: if request.auth != null;
      
      // Only authenticated users can create
      allow create: if request.auth != null;
      
      // Only creator can delete
      allow delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
      
      // No updates (immutable lookup table)
      allow update: if false;
    }

    // Families - core family data with proper member validation
    match /families/{familyId} {
      // Anyone authenticated can create families (parent app anonymous auth)
      allow create: if request.auth != null &&
        request.resource.data.createdBy == request.auth.uid &&
        request.auth.uid in request.resource.data.memberIds;
      
      // Family members can read and update
      allow read, update: if request.auth != null && 
        request.auth.uid in resource.data.memberIds;
      
      // Only creator can delete
      allow delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;

      // Subcollections - only family members can access
      match /{subcollection}/{document=**} {
        allow read, write: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/families/$(familyId)).data.memberIds;
      }
    }

    // Supporting collections with basic auth
    match /fcmTokens/{tokenId} {
      allow read, write: if request.auth != null;
    }

    match /subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /analytics/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /appSettings/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}